<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
        xmlns="http://a9.com/-/spec/opensearch/1.1/"
        xmlns:dco="https://data.deepcarbon.net/browsers/ontologies/dco-s2s.ttl#">

  <ShortName>DCO Data Portal Object Search</ShortName>
  <Description>DCO Data Portal Object Search Service, returning any type
  of object in the DCO system. This opensearch document describes how to
  call the various RESTful services in order to fill s2s facets (types
  of objects to be returned, the communities the objects are related to)
  and the result set listing the objects.</Description>
  <Tags></Tags>
  <Contact>web@mail.deepcarbon.net</Contact>
  <Url type="application/json" rel="dco:TypesQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/objects/search.php?request=types&amp;communities={dco:Communities?}" />
  <Url type="application/json" rel="dco:CommunitiesQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/objects/search.php?request=communities&amp;types={dco:Types?}" />
  <Url type="text/html" rel="dco:ResultsListQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/objects/search.php?request=objects&amp;types={dco:Types?}&amp;communities={dco:Communities?}&amp;limit={count}&amp;offset={startIndex}" />
  <LongName>DCO Data Portal Object Search Service</LongName>
  <Developer>DCO Data Science Team</Developer>
  <Attribution></Attribution>
  <SyndicationRight>open</SyndicationRight>
  <AdultContent>false</AdultContent>
  <Language>en-us</Language>
  <OutputEncoding>UTF-8</OutputEncoding>
  <InputEncoding>UTF-8</InputEncoding>
</OpenSearchDescription>


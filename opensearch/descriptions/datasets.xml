  <ShortName>DCO Data Portal Dataset Search</ShortName>
  <Description>DCO Data Portal Dataset Search Service. This opensearch
  document describes how to call the various RESTful services in order
  to fill s2s facets (select year of the dataset, DCO communities the
  dataset is related to, DCO groups the data sets are related to, the
  DCO authors of the datasets, non-DCO authors of the datasets, and the
  projects the datasets are related to), and the result set.</Description>
  <Tags></Tags>
  <Contact>web@mail.deepcarbon.net</Contact>
  <Url type="application/json" rel="dco:YearsQuery" template="http://data.deepcarbon.net/dco-s2s/opensearch/services/datasets/search.php?request=years&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;projects={dco:Projects?}&amp;datatypes={dco:DataType?}" />
  <Url type="application/json" rel="dco:CommunitiesQuery" template="http://data.deepcarbon.net/dco-s2s/opensearch/services/datasets/search.php?request=communities&amp;years={dco:Years?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;projects={dco:Projects?}&amp;datatypes={dco:DataType?}" />
  <Url type="application/json" rel="dco:GroupsQuery" template="http://data.deepcarbon.net/dco-s2s/opensearch/services/datasets/search.php?request=groups&amp;communities={dco:Communities?}&amp;years={dco:Years?}&amp;authors={dco:Authors?}&amp;projects={dco:Projects?}&amp;datatypes={dco:DataType?}" />
  <Url type="application/json" rel="dco:AuthorsQuery" template="http://data.deepcarbon.net/dco-s2s/opensearch/services/datasets/search.php?request=authors&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;years={dco:Years?}&amp;projects={dco:Projects?}&amp;datatypes={dco:DataType?}" />
  <Url type="application/json" rel="dco:ProjectsQuery" template="http://data.deepcarbon.net/dco-s2s/opensearch/services/datasets/search.php?request=projects&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;years={dco:Years?}&amp;datatypes={dco:DataType?}" />
  <Url type="application/json" rel="dco:DataTypeQuery" template="http://data.deepcarbon.net/dco-s2s/opensearch/services/datasets/search.php?request=datatypes&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;years={dco:Years?}&amp;projects={dco:Projects?}" />
  <Url type="text/html" rel="dco:ResultsListQuery" template="http://data.deepcarbon.net/dco-s2s/opensearch/services/datasets/search.php?request=datasets&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;projects={dco:Projects?}&amp;years={dco:Years?}&amp;datatypes={dco:DataType?}&amp;limit={count}&amp;offset={startIndex}" />

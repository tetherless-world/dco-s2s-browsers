<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
        xmlns="http://a9.com/-/spec/opensearch/1.1/"
        xmlns:geo="http://a9.com/-/opensearch/extensions/geo/1.0/"
        xmlns:dco="https://data.deepcarbon.net/browsers/ontologies/dco-s2s.ttl#">

  <ShortName>DCO Data Portal Publication Search</ShortName>
  <Description>DCO Data Portal Publication Search Service, that lists
  the publications that match a certain set of selections. This opensearch
  document describes how to call the various RESTful services in order
  to fill s2s facets (years the publications were released, DCO
  communities the publications are related to, DCO groups the
  publications are related to, DCO authors of the publications, non-DCO
  authors of the publications, organization affiliations of authors of
  the publications, and key concepts found in the publication) and the
  result set listing the publications that match the various selections.
  </Description>
  <Tags></Tags>
  <Contact>web@mail.deepcarbon.net</Contact>
  <Url type="application/json" rel="dco:YearsQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/publications/search.php?request=years&amp;keywords={dco:SearchTerms?}&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;organizations={dco:Organizations?}&amp;concepts={dco:Concepts?}" />
  <Url type="application/json" rel="dco:CommunitiesQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/publications/search.php?request=communities&amp;keywords={dco:SearchTerms?}&amp;years={dco:Years?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;organizations={dco:Organizations?}&amp;concepts={dco:Concepts?}" />
  <Url type="application/json" rel="dco:GroupsQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/publications/search.php?request=groups&amp;keywords={dco:SearchTerms?}&amp;communities={dco:Communities?}&amp;years={dco:Years?}&amp;authors={dco:Authors?}&amp;organizations={dco:Organizations?}&amp;concepts={dco:Concepts?}" />
  <Url type="application/json" rel="dco:AuthorsQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/publications/search.php?request=authors&amp;keywords={dco:SearchTerms?}&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;years={dco:Years?}&amp;organizations={dco:Organizations?}&amp;concepts={dco:Concepts?}" />
  <Url type="application/json" rel="dco:OrganizationsQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/publications/search.php?request=organizations&amp;keywords={dco:SearchTerms?}&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;years={dco:Years?}&amp;concepts={dco:Concepts?}" />
  <Url type="application/json" rel="dco:ConceptsQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/publications/search.php?request=concepts&amp;keywords={dco:SearchTerms?}&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;organizations={dco:Organizations?}&amp;years={dco:Years?}" />
  <Url type="text/html" rel="dco:ResultsListQuery" template="https://data.deepcarbon.net/browsers/opensearch/services/publications/search.php?request=publications&amp;keywords={dco:SearchTerms?}&amp;communities={dco:Communities?}&amp;groups={dco:Groups?}&amp;authors={dco:Authors?}&amp;organizations={dco:Organizations?}&amp;years={dco:Years?}&amp;concepts={dco:Concepts?}&amp;limit={count}&amp;offset={startIndex}" />
  <LongName>DCO Data Portal Publication Search Service</LongName>
  <Query role="example" geo:box="140,10,145,15"></Query>
  <Developer>DCO Data Science Team</Developer>
  <Attribution></Attribution>
  <SyndicationRight>open</SyndicationRight>
  <AdultContent>false</AdultContent>
  <Language>en-us</Language>
  <OutputEncoding>UTF-8</OutputEncoding>
  <InputEncoding>UTF-8</InputEncoding>
</OpenSearchDescription>

